<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="ContentDescription"
    tools:context="com.alexandrepiveteau.library.tutorial.TutorialFragment">

    <RelativeLayout
        android:layout_weight="1.5"
        android:layout_width="match_parent"
        android:layout_height="0dp">


        <ImageView
            android:layout_margin="24dp"
            android:layout_centerHorizontal="true"
            android:scaleType="centerInside"
            android:id="@+id/tutorial_image_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ImageView
            android:layout_margin="24dp"
            android:layout_centerHorizontal="true"
            android:scaleType="centerInside"
            android:id="@+id/tutorial_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ImageView
            android:layout_margin="24dp"
            android:layout_centerHorizontal="true"
            android:scaleType="centerInside"
            android:id="@+id/tutorial_image_foreground"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <TextView
            android:gravity="center"
            android:textSize="18sp"
            android:layout_margin="32dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:textColor="#ffffff"
            android:id="@+id/tutorial_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"/>

        <TextView
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:gravity="center"
            android:textSize="24sp"
            android:layout_above="@id/tutorial_description"
            android:textColor="#ffffff"
            android:id="@+id/tutorial_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</LinearLayout>
